<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
	style="@style/ToolBar">		
    
    <RelativeLayout	android:layout_height="fill_parent"
   		android:layout_width="wrap_content">
   		
	    <ImageButton android:id="@+id/playButton"
	        style="@style/PlayButton"
        	android:contentDescription="@string/play"/>
	
	    <ImageButton android:id="@+id/pauseButton"
	        style="@style/PauseButton"
        	android:contentDescription="@string/pause"
        	android:visibility="gone"/>
	</RelativeLayout>    
	
    <SeekBar android:id="@+id/playProgress"
        style="@style/PlayProgress"/>

    <TextView android:id="@+id/playTimeText"
        style="@style/PlayTimeText"/>
    
</LinearLayout>

